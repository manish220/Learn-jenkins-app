pipeline {
     agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
    stages {
        stage('Build') {
           

            steps {
                sh '''
                ls -la
                npm --version
                node --version
                npm ci
                npm run build
                '''
               
            }
        }
        
        stage('Test'){
          
            steps {
                sh '''
               test -f build/index.html
                npm test
                '''
               
            }
        }
    }
    post {
    always {
        echo 'Cleaning up...'
        junit 'test-results/junit.xml'
        cleanWs()
    }
    success {
        echo 'Pipeline completed successfully.'
    }
    failure {
        echo 'Pipeline failed.'
    }
}

}
